<html>
<head>
    <title>Base Camp Coding Academy Job Posting</title>
    <meta charset="utf-8" />
    <meta
            name="viewport"
            content="width=device-width, initial-scale=1, user-scalable=no"
    />
    <link
            rel="stylesheet"
            href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
            integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T"
            crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/main.css" />
</head>
<body class="bg-light">
<nav
        style="background-color: #3b1b0c"
        class="navbar navbar-expand-lg border-bottom border-dark sticky"
>
    <ul class="navbar-nav mr-auto nav">
        <li class="nav-item">
            <a class="nav-link text-white" href="/">Home</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-white" href="/post">Post</a>
        </li>
    </ul>
    <span class="text-white" style="border: solid red;">ADMIN</span>
</nav>
<header id="myCarousel" class="carousel slide">
    <div class="carousel-inner">
        <div class="item active">
            <div
                    class="fill"
                    style="background-image:url('images/home-top-bg.png');"
            >
                <span class="center-spacer"></span>
                <img
                        src="images/basecamp-logo.png"
                        style="vertical-align:middle;"
                        alt="Base Camp Coding Academy"
                />
            </div>
        </div>
    </div>
</header>
<div class="container mt-3 d-flex justify-content-between">
    <div class="dropdown">
        <button class="btn btn-bcca dropdown-toggle" type="button" id="dropdownMenu2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Sort By
        </button>
        <form method="GET" class="dropdown-menu" aria-labelledby="dropdownMenu2">
            <button type="submit" class="dropdown-item" name="old">Oldest</button>
            <button type="submit" class="dropdown-item" name="new">Newest</button>
        </form>
    </div>
    <div>
        <form method="GET">
            <input type="date" name="date">
            <button type="submit" class="btn-bcca btn">Submit</button>
            {{#date}}
                <p>Date: {{.}}</p>
            {{/date}}
            {{#error}}
                <p class="text-danger">ERROR: {{.}}</p>
            {{/error}}
        </form>
    </div>
</div>
<div class="mt-3">
    {{#adminJobs}}
        <a href="admin/{{id}}" class="job-link text-body" style="display: contents">
            <div class="w-50 mb-4 p-2 shadow mx-auto d-flex bd-lg">
                <div class="logo" style="background-image: url('{{logo}}');">
                </div>
                <div style="padding: 10px 20px;">
                    <p>{{position}}</p>
                    <p>{{company}}</p>
                    <small>{{location}}</small>
                </div>
                <div class="desc ml-auto">
                    <p>{{preview}}</p>
                </div>
            </div>
        </a>
    {{/adminJobs}}
</div>
</body>

<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
</html>